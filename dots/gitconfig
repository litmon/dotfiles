[push]
	default = current
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true

[diff]
  external = git_diff_wrapper

[alias]
  todo = grep -l -e TODO
  fixme = grep -l -e FIXME
[merge]
	tool = vimdiff
